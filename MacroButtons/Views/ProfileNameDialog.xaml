<Window x:Class="MacroButtons.Views.ProfileNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile Name"
        Width="400" Height="180"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Profile name:"
                   Foreground="White"
                   Margin="0,0,0,10"
                   FontSize="14"/>

        <TextBox Grid.Row="1"
                 x:Name="ProfileNameTextBox"
                 VerticalAlignment="Center"
                 Padding="8"
                 FontSize="14"
                 Background="#2D2D30"
                 Foreground="White"
                 BorderBrush="#3F3F46"
                 BorderThickness="1"/>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="OK"
                    Width="80"
                    Height="30"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"
                    IsDefault="True"
                    Background="#007ACC"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"/>
            <Button Content="Cancel"
                    Width="80"
                    Height="30"
                    Click="CancelButton_Click"
                    IsCancel="True"
                    Background="#3F3F46"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
