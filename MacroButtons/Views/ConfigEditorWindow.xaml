<Window x:Class="MacroButtons.Views.ConfigEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroButtons.Views"
        xmlns:vm="clr-namespace:MacroButtons.ViewModels"
        mc:Ignorable="d"
        Title="MacroButtons Config Editor"
        Width="1200"
        Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Tile Style -->
        <Style x:Key="TileStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Pane: Grid Layout -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Button Grid Layout" FontSize="18" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Grid.Row="0" Text="{Binding Breadcrumb}" FontSize="12" Opacity="0.7" Margin="0,25,0,10"/>

            <!-- Grid Controls -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="← Back"
                        Command="{Binding NavigateBackCommand}"
                        Visibility="{Binding IsAtRootLevel, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                <Button Content="+ Item" Command="{Binding AddItemCommand}"/>
                <Button Content="Themes" Command="{Binding EditThemesCommand}"/>
                <TextBlock Text="{Binding Rows, StringFormat='Grid: {0}'}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <TextBlock Text="{Binding Columns, StringFormat=' x {0}'}" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Grid of Tiles -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Tiles}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding Rows}" Columns="{Binding Columns}"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource TileStyle}"
                                    Background="{Binding IsSelected, Converter={StaticResource BoolToHighlightBrushConverter}}"
                                    AllowDrop="True"
                                    PreviewMouseLeftButtonDown="Tile_PreviewMouseLeftButtonDown"
                                    PreviewMouseMove="Tile_PreviewMouseMove"
                                    PreviewMouseLeftButtonUp="Tile_PreviewMouseLeftButtonUp"
                                    Drop="Tile_Drop"
                                    DragOver="Tile_DragOver"
                                    DragLeave="Tile_DragLeave"
                                    Opacity="{Binding IsDragging, Converter={StaticResource DraggingToOpacityConverter}}">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding DataContext.SelectTileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  CommandParameter="{Binding}"/>
                                    <MouseBinding MouseAction="LeftDoubleClick"
                                                  Command="{Binding DataContext.DrillIntoSubmenuCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                </Border.InputBindings>
                                <Border x:Name="DropIndicator"
                                        BorderBrush="#007ACC"
                                        BorderThickness="0"
                                        Background="Transparent">
                                    <TextBlock Text="{Binding DisplayTitle}"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"
                                               Foreground="#9CDCFE"
                                               FontFamily="Consolas"
                                               FontSize="12"
                                               Padding="5"/>
                                </Border>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#3E3E42"/>

        <!-- Right Pane: Property Editor -->
        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Tile Properties" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Properties Panel -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="No tile selected"
                               Visibility="{Binding SelectedTile, Converter={StaticResource NullToVisibilityConverter}}"
                               FontStyle="Italic"
                               Opacity="0.6"/>

                    <!-- Property editor -->
                    <StackPanel Visibility="{Binding SelectedTile, Converter={StaticResource NotNullToVisibilityConverter}}">
                        <TextBlock Text="Tile Index:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedTile.Index, StringFormat='Position: {0}'}" Opacity="0.7" Margin="0,0,0,10"/>

                        <TextBlock Text="Title:"/>
                        <TextBox Text="{Binding SelectedTile.Title, UpdateSourceTrigger=PropertyChanged}"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 ToolTip="The text displayed on the button (or JSON for dynamic titles)"/>

                        <TextBlock Text="Action Type:"/>
                        <ComboBox ItemsSource="{Binding SelectedTile.ActionTypes}"
                                  SelectedItem="{Binding SelectedTile.SelectedActionType, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="0,0,0,10"
                                  ToolTip="The type of action to perform when clicked">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="#2D2D30"/>
                                    <Setter Property="Foreground" Value="#F1F1F1"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <TextBlock Text="Action Value:"/>
                        <TextBlock Text="Examples:" FontSize="11" Opacity="0.6" Margin="0,0,0,2"/>
                        <TextBlock FontSize="11" Opacity="0.6" Margin="0,0,0,5">
                            <Run Text="• Keypress: ^v (Ctrl+V), +{Enter} (Shift+Enter)"/>
                            <LineBreak/>
                            <Run Text="• Executable: notepad.exe, calc.exe"/>
                            <LineBreak/>
                            <Run Text="• Python: -c print('hello')"/>
                            <LineBreak/>
                            <Run Text="• PowerShell: Get-Date -Format 'HH:mm:ss'"/>
                            <LineBreak/>
                            <Run Text="• PowerShell Script: ~/scripts/my-script.ps1"/>
                            <LineBreak/>
                            <Run Text="• Builtin: quit(), clock()"/>
                            <LineBreak/>
                            <Run Text="• Dynamic Submenu: JSON object with command"/>
                        </TextBlock>
                        <TextBox Text="{Binding SelectedTile.ActionValue, UpdateSourceTrigger=PropertyChanged}"
                                 Height="80"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 IsEnabled="{Binding SelectedTile.IsActionValueEnabled}"/>

                        <TextBlock Text="Theme:"/>
                        <ComboBox ItemsSource="{Binding SelectedTile.Themes}"
                                  SelectedItem="{Binding SelectedTile.SelectedTheme, UpdateSourceTrigger=PropertyChanged}"
                                  Margin="0,0,0,10"
                                  ToolTip="Color theme for this button">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="#2D2D30"/>
                                    <Setter Property="Foreground" Value="#F1F1F1"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>

                        <Separator Margin="0,10" Background="#3E3E42"/>

                        <Button Content="Edit Submenu Items"
                                Command="{Binding DataContext.DrillIntoSubmenuCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                Visibility="{Binding IsStaticSubmenu, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="#0E639C"
                                Margin="0,5,0,10"
                                ToolTip="Open submenu for editing"/>

                        <Button Content="Clear This Tile"
                                Command="{Binding DataContext.ClearTileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                Background="#C42B1C"
                                Margin="0,5,0,10"
                                ToolTip="Remove all content from this tile"/>

                        <TextBlock Text="Status:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding SelectedTile.IsEmpty, StringFormat='Empty: {0}'}" Opacity="0.7"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Command="{Binding SaveCommand}" Width="80"/>
                <Button Content="Save and Close" Command="{Binding SaveAndCloseCommand}" Width="120"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
