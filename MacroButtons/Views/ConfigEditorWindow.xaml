<Window x:Class="MacroButtons.Views.ConfigEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroButtons.Views"
        xmlns:vm="clr-namespace:MacroButtons.ViewModels"
        mc:Ignorable="d"
        Title="MacroButtons Config Editor"
        Width="1200"
        Height="700"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Window.Resources>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Tile Style -->
        <Style x:Key="TileStyle" TargetType="Border">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2D2D30"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label Style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="#F1F1F1"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Pane: Grid Layout -->
        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Button Grid Layout" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Grid Controls -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="+ Row" Command="{Binding AddRowCommand}"/>
                <Button Content="- Row" Command="{Binding DeleteRowCommand}"/>
                <Button Content="+ Column" Command="{Binding AddColumnCommand}"/>
                <Button Content="- Column" Command="{Binding DeleteColumnCommand}"/>
                <TextBlock Text="{Binding Rows, StringFormat='Grid: {0}'}" VerticalAlignment="Center" Margin="15,0,0,0"/>
                <TextBlock Text="{Binding Columns, StringFormat=' x {0}'}" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Grid of Tiles -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl ItemsSource="{Binding Tiles}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="{Binding Rows}" Columns="{Binding Columns}"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource TileStyle}">
                                <Border.InputBindings>
                                    <MouseBinding MouseAction="LeftClick"
                                                  Command="{Binding DataContext.SelectTileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <TextBlock Text="{Binding DisplayTitle}"
                                           TextAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Foreground="#9CDCFE"
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           Padding="5"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#3E3E42"/>

        <!-- Right Pane: Property Editor -->
        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" Text="Tile Properties" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Properties Panel -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="No tile selected"
                               Visibility="{Binding SelectedTile, Converter={StaticResource NullToVisibilityConverter}}"
                               FontStyle="Italic"
                               Opacity="0.6"/>

                    <!-- Property editor will go here -->
                    <StackPanel Visibility="{Binding SelectedTile, Converter={StaticResource NotNullToVisibilityConverter}}">
                        <TextBlock Text="Title:"/>
                        <TextBox Text="{Binding SelectedTile.DisplayTitle, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Action Type:"/>
                        <ComboBox SelectedIndex="0" Margin="0,0,0,10">
                            <ComboBoxItem Content="None"/>
                            <ComboBoxItem Content="Keypress"/>
                            <ComboBoxItem Content="Executable"/>
                            <ComboBoxItem Content="Python"/>
                            <ComboBoxItem Content="PowerShell"/>
                            <ComboBoxItem Content="PowerShell Script"/>
                        </ComboBox>

                        <TextBlock Text="Action Value:"/>
                        <TextBox Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                        <TextBlock Text="Theme:"/>
                        <ComboBox SelectedIndex="0" Margin="0,0,0,10">
                            <ComboBoxItem Content="Default"/>
                            <ComboBoxItem Content="Prominent"/>
                            <ComboBoxItem Content="Toggled"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Command="{Binding SaveCommand}" Width="80"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Width="80"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
