<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?define ProductVersion="1.0.0.0" ?>
  <?define ProductName="MacroButtons" ?>
  <?define Manufacturer="MacroButtons" ?>
  <?define UpgradeCode="{A1B2C3D4-E5F6-7890-ABCD-EF1234567890}" ?>

  <Product Id="*"
           Name="$(var.ProductName)"
           Language="1033"
           Version="$(var.ProductVersion)"
           Manufacturer="$(var.Manufacturer)"
           UpgradeCode="$(var.UpgradeCode)">

    <Package InstallerVersion="200"
             Compressed="yes"
             InstallScope="perMachine"
             Description="$(var.ProductName) Installer"
             Comments="Touch-screen macro button panel with retro terminal aesthetic" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

    <MediaTemplate EmbedCab="yes" />

    <!-- Feature definition -->
    <Feature Id="ProductFeature" Title="MacroButtons" Level="1" Display="expand"
             Description="Core MacroButtons application files" AllowAdvertise="no" Absent="disallow">
      <ComponentGroupRef Id="PublishedDlls" />
      <ComponentRef Id="LicenseFile" />
      <ComponentRef Id="CopySamplesScript" />
      <ComponentGroupRef Id="SamplesReadme" />
      <ComponentGroupRef Id="AllSamplesInProgramFiles" />
      <ComponentRef Id="ApplicationShortcut" />
      <ComponentRef Id="UserProfileCleanup" />
    </Feature>

    <Feature Id="DesktopShortcutFeature" Title="Desktop Shortcut" Level="1"
             Description="Create a desktop shortcut for MacroButtons" AllowAdvertise="no">
      <ComponentRef Id="DesktopShortcut" />
    </Feature>

    <!-- Sample Profiles Feature Tree - Optional copies to user profile -->
    <Feature Id="SamplesFeature" Title="Copy Sample Profiles to User Directory" Level="1" Display="expand"
             Description="Copy selected sample button profiles to %USERPROFILE%\.macrobuttons\ for immediate use. Sample reference files are always installed to Program Files. WARNING: This will overwrite any existing profiles with the same names." AllowAdvertise="no">

      <Feature Id="Sample_ComfyUI_Feature" Title="ComfyUI" Level="1000"
               Description="Macro buttons for ComfyUI Stable Diffusion interface" AllowAdvertise="no" />

      <Feature Id="Sample_EliteDangerous_Feature" Title="Elite Dangerous" Level="1000"
               Description="Macro buttons for Elite Dangerous space simulator" AllowAdvertise="no" />

      <Feature Id="Sample_FileExplorer_Feature" Title="File Explorer" Level="1000"
               Description="Macro buttons for Windows File Explorer" AllowAdvertise="no" />

      <Feature Id="Sample_Firefox_Feature" Title="Firefox" Level="1000"
               Description="Macro buttons for Mozilla Firefox browser" AllowAdvertise="no" />

      <Feature Id="Sample_Lightroom_Feature" Title="Adobe Lightroom" Level="1000"
               Description="Macro buttons for Adobe Lightroom photo editing" AllowAdvertise="no" />

      <Feature Id="Sample_Photoshop_Feature" Title="Adobe Photoshop" Level="1000"
               Description="Macro buttons for Adobe Photoshop image editing" AllowAdvertise="no" />

      <Feature Id="Sample_VisualStudio_Feature" Title="Visual Studio" Level="1000"
               Description="Macro buttons for Microsoft Visual Studio IDE" AllowAdvertise="no" />

      <Feature Id="Sample_VSCode_Feature" Title="VS Code" Level="1000"
               Description="Macro buttons for Visual Studio Code editor" AllowAdvertise="no" />

      <Feature Id="Sample_WindowsCalculator_Feature" Title="Windows Calculator" Level="1000"
               Description="Macro buttons for Windows Calculator app" AllowAdvertise="no" />

      <Feature Id="Sample_WindowsDesktop_Feature" Title="Windows Desktop" Level="1"
               Description="Macro buttons for Windows desktop management (Recommended)" AllowAdvertise="no" />

      <Feature Id="Sample_WindowsTerminal_Feature" Title="Windows Terminal" Level="1000"
               Description="Macro buttons for Windows Terminal" AllowAdvertise="no" />

    </Feature>

    <!-- UI configuration -->
    <UIRef Id="WixUI_FeatureTree" />
    <WixVariable Id="WixUILicenseRtf" Value="License.rtf" />

    <!-- Launch app after installation checkbox -->
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Launch MacroButtons" />
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOX" Value="1" />

    <!-- Custom action to launch the application -->
    <CustomAction Id="LaunchApplication"
                  Directory="INSTALLFOLDER"
                  ExeCommand="[INSTALLFOLDER]MacroButtons.exe"
                  Execute="immediate"
                  Impersonate="yes"
                  Return="asyncNoWait" />

    <!-- Property to hold the semicolon-separated list of selected samples -->
    <Property Id="SELECTED_SAMPLES" Value="" />

    <!-- Build the list of selected samples (each SetProperty needs unique ID) -->
    <SetProperty Id="AddSample_ComfyUI" Property="SELECTED_SAMPLES" Value="[SELECTED_SAMPLES];ComfyUI" Before="SetCopySamplesData" Sequence="execute">
      &amp;Sample_ComfyUI_Feature=3
    </SetProperty>
    <SetProperty Id="AddSample_EliteDangerous" Property="SELECTED_SAMPLES" Value="[SELECTED_SAMPLES];EliteDangerous" Before="SetCopySamplesData" Sequence="execute">
      &amp;Sample_EliteDangerous_Feature=3
    </SetProperty>
    <SetProperty Id="AddSample_FileExplorer" Property="SELECTED_SAMPLES" Value="[SELECTED_SAMPLES];FileExplorer" Before="SetCopySamplesData" Sequence="execute">
      &amp;Sample_FileExplorer_Feature=3
    </SetProperty>
    <SetProperty Id="AddSample_Firefox" Property="SELECTED_SAMPLES" Value="[SELECTED_SAMPLES];Firefox" Before="SetCopySamplesData" Sequence="execute">
      &amp;Sample_Firefox_Feature=3
    </SetProperty>
    <SetProperty Id="AddSample_Lightroom" Property="SELECTED_SAMPLES" Value="[SELECTED_SAMPLES];Lightroom" Before="SetCopySamplesData" Sequence="execute">
      &amp;Sample_Lightroom_Feature=3
    </SetProperty>
    <SetProperty Id="AddSample_Photoshop" Property="SELECTED_SAMPLES" Value="[SELECTED_SAMPLES];Photoshop" Before="SetCopySamplesData" Sequence="execute">
      &amp;Sample_Photoshop_Feature=3
    </SetProperty>
    <SetProperty Id="AddSample_VisualStudio" Property="SELECTED_SAMPLES" Value="[SELECTED_SAMPLES];VisualStudio" Before="SetCopySamplesData" Sequence="execute">
      &amp;Sample_VisualStudio_Feature=3
    </SetProperty>
    <SetProperty Id="AddSample_VSCode" Property="SELECTED_SAMPLES" Value="[SELECTED_SAMPLES];VSCode" Before="SetCopySamplesData" Sequence="execute">
      &amp;Sample_VSCode_Feature=3
    </SetProperty>
    <SetProperty Id="AddSample_WindowsCalculator" Property="SELECTED_SAMPLES" Value="[SELECTED_SAMPLES];WindowsCalculator" Before="SetCopySamplesData" Sequence="execute">
      &amp;Sample_WindowsCalculator_Feature=3
    </SetProperty>
    <SetProperty Id="AddSample_WindowsDesktop" Property="SELECTED_SAMPLES" Value="[SELECTED_SAMPLES];WindowsDesktop" Before="SetCopySamplesData" Sequence="execute">
      &amp;Sample_WindowsDesktop_Feature=3
    </SetProperty>
    <SetProperty Id="AddSample_WindowsTerminal" Property="SELECTED_SAMPLES" Value="[SELECTED_SAMPLES];WindowsTerminal" Before="SetCopySamplesData" Sequence="execute">
      &amp;Sample_WindowsTerminal_Feature=3
    </SetProperty>

    <!-- Custom action to set data for deferred action (immediate) -->
    <!-- Passes both install folder and selected samples list -->
    <CustomAction Id="SetCopySamplesData" Property="CopySamplesToUserProfile"
                  Value="INSTALLFOLDER=[INSTALLFOLDER];SAMPLES=[SELECTED_SAMPLES]"
                  Execute="immediate" />

    <!-- Custom action to copy selected samples to user profile (deferred) -->
    <CustomAction Id="CopySamplesToUserProfile"
                  Directory="TARGETDIR"
                  ExeCommand="cmd.exe /c powershell.exe -NoProfile -ExecutionPolicy Bypass -WindowStyle Hidden -Command &quot;&amp; {$data = '[CustomActionData]'; $pairs = $data -split ';' | Where-Object {$_ -match '='}; $params = @{}; foreach ($pair in $pairs) { $key, $value = $pair -split '=', 2; $params[$key] = $value }; &amp; $params['INSTALLFOLDER']CopySamples.ps1 -InstallFolder $params['INSTALLFOLDER'] -SelectedSamples $params['SAMPLES']}&quot;"
                  Execute="deferred"
                  Impersonate="yes"
                  Return="ignore" />

    <!-- Schedule the custom actions -->
    <InstallExecuteSequence>
      <Custom Action="SetCopySamplesData" Before="CopySamplesToUserProfile">
        <![CDATA[NOT Installed AND (&Sample_ComfyUI_Feature=3 OR &Sample_EliteDangerous_Feature=3 OR &Sample_FileExplorer_Feature=3 OR &Sample_Firefox_Feature=3 OR &Sample_Lightroom_Feature=3 OR &Sample_Photoshop_Feature=3 OR &Sample_VisualStudio_Feature=3 OR &Sample_VSCode_Feature=3 OR &Sample_WindowsCalculator_Feature=3 OR &Sample_WindowsDesktop_Feature=3 OR &Sample_WindowsTerminal_Feature=3)]]>
      </Custom>
      <Custom Action="CopySamplesToUserProfile" After="InstallFiles">
        <![CDATA[NOT Installed AND (&Sample_ComfyUI_Feature=3 OR &Sample_EliteDangerous_Feature=3 OR &Sample_FileExplorer_Feature=3 OR &Sample_Firefox_Feature=3 OR &Sample_Lightroom_Feature=3 OR &Sample_Photoshop_Feature=3 OR &Sample_VisualStudio_Feature=3 OR &Sample_VSCode_Feature=3 OR &Sample_WindowsCalculator_Feature=3 OR &Sample_WindowsDesktop_Feature=3 OR &Sample_WindowsTerminal_Feature=3)]]>
      </Custom>
      <Custom Action="LaunchApplication" After="InstallFinalize">
        NOT Installed AND NOT REMOVE AND WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1
      </Custom>
    </InstallExecuteSequence>

    <!-- Icon for Add/Remove Programs -->
    <Icon Id="icon.ico" SourceFile="MacroButtons.ico"/>
    <Property Id="ARPPRODUCTICON" Value="icon.ico" />
    <Property Id="ARPHELPLINK" Value="https://github.com/yourusername/macro-buttons" />
  </Product>

  <Fragment>
    <!-- Directory structure -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFiles64Folder">
        <Directory Id="INSTALLFOLDER" Name="MacroButtons">
          <Directory Id="SAMPLESFOLDER" Name="samples" />
        </Directory>
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="MacroButtons"/>
      </Directory>
      <Directory Id="DesktopFolder" Name="Desktop" />
      <!-- User profile directory for optional sample installation -->
      <Directory Id="UserProfileFolder">
        <Directory Id="USERPROFILEFOLDER" Name=".macrobuttons" />
      </Directory>
    </Directory>
  </Fragment>

  <Fragment>
    <!-- Clean up user profile folder on uninstall -->
    <DirectoryRef Id="USERPROFILEFOLDER">
      <Component Id="UserProfileCleanup" Guid="{3A334567-89AB-CDEF-0123-456789ABCDEF}">
        <RemoveFolder Id="RemoveUserProfileFolder" Directory="USERPROFILEFOLDER" On="uninstall" />
        <RegistryValue Root="HKCU" Key="Software\MacroButtons" Name="UserProfileFolder" Type="integer" Value="1" KeyPath="yes" />
      </Component>
    </DirectoryRef>
  </Fragment>

  <Fragment>
    <!-- License file and PowerShell script (manually defined since they're not in the publish output) -->
    <DirectoryRef Id="INSTALLFOLDER">
      <Component Id="LicenseFile" Guid="{F6A7B8C9-D0E1-2345-6789-012345678901}">
        <File Id="LicenseTxt"
              Source="$(var.ProjectDir)..\LICENSE"
              KeyPath="yes" />
      </Component>
      <Component Id="CopySamplesScript" Guid="{1C2D3E4F-5A6B-7C8D-9E0F-1A2B3C4D5E6F}">
        <File Id="CopySamplesPs1"
              Source="$(var.ProjectDir)CopySamples.ps1"
              KeyPath="yes" />
      </Component>
    </DirectoryRef>

    <!-- Application files: Auto-generated by HarvestDlls target in DllsAuto.wxs -->
    <!-- Samples Files: Auto-generated by HarvestSamples target in SamplesAuto.wxs -->

    <!-- Start Menu Shortcut -->
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="ApplicationShortcut" Guid="{F5A6B7C8-D9E0-1234-F123-456789012345}">
        <Shortcut Id="ApplicationStartMenuShortcut"
                  Name="MacroButtons"
                  Description="Touch-screen macro button panel"
                  Target="[INSTALLFOLDER]MacroButtons.exe"
                  WorkingDirectory="INSTALLFOLDER"/>
        <RemoveFolder Id="CleanUpShortCut" Directory="ApplicationProgramsFolder" On="uninstall"/>
        <RegistryValue Root="HKCU"
                       Key="Software\MacroButtons"
                       Name="installed"
                       Type="integer"
                       Value="1"
                       KeyPath="yes"/>
      </Component>
    </DirectoryRef>

    <!-- Desktop Shortcut -->
    <DirectoryRef Id="DesktopFolder">
      <Component Id="DesktopShortcut" Guid="{A6B7C8D9-E0F1-2345-1234-567890123456}">
        <Shortcut Id="DesktopShortcutId"
                  Name="MacroButtons"
                  Description="Touch-screen macro button panel"
                  Target="[INSTALLFOLDER]MacroButtons.exe"
                  WorkingDirectory="INSTALLFOLDER"/>
        <RegistryValue Root="HKCU"
                       Key="Software\MacroButtons"
                       Name="desktopShortcut"
                       Type="integer"
                       Value="1"
                       KeyPath="yes"/>
      </Component>
    </DirectoryRef>
  </Fragment>
</Wix>
