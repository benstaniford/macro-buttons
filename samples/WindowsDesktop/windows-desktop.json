{
  "global": {
    "monitorIndex": 0,
    "refresh": "1s"
  },
  "themes": [
    {
      "name": "default",
      "foreground": "cyan",
      "background": "black"
    },
    {
      "name": "prominent",
      "foreground": "black",
      "background": "cyan"
    },
    {
      "name": "utility",
      "foreground": "yellow",
      "background": "#001a1a"
    }
  ],
  "items": [
    {
      "title": {
        "builtin": "clock()",
        "refresh": "1s",
        "theme": "prominent"
      }
    },
    {
      "title": "Settings\n(Win+I)",
      "action": { "keypress": "#i" }
    },
    {
      "title": "File Explorer\n(Win+E)",
      "action": { "keypress": "#e" }
    },
    {
      "title": "Run Dialog\n(Win+R)",
      "action": { "keypress": "#r" }
    },
    {
      "title": "Task Manager\n(Ctrl+Shift+Esc)",
      "action": { "keypress": "^+{Esc}" },
      "theme": "utility"
    },
    {
      "title": "Lock Computer\n(Win+L)",
      "action": { "keypress": "#l" }
    },
    {
      "title": "Show Desktop\n(Win+D)",
      "action": { "keypress": "#d" }
    },
    {
      "title": "Task View\n(Win+Tab)",
      "action": { "keypress": "#{Tab}" }
    },
    {
      "title": "Screenshot\n(Win+Shift+S)",
      "action": { "keypress": "#+s" }
    },
    {
      "title": "Clipboard History\n(Win+V)",
      "action": { "keypress": "#v" }
    },
    {
      "title": "Emoji Picker\n(Win+.)",
      "action": { "keypress": "#." }
    },
    {
      "title": "Quick Settings\n(Win+A)",
      "action": { "keypress": "#a" }
    },
    {
      "title": "Connect/Cast\n(Win+K)",
      "action": { "keypress": "#k" }
    },
    {
      "title": "New Virtual Desktop\n(Win+Ctrl+D)",
      "action": { "keypress": "#^d" }
    },
    {
      "title": "Previous Desktop\n(Win+Ctrl+Left)",
      "action": { "keypress": "#^{Left}" }
    },
    {
      "title": "Next Desktop\n(Win+Ctrl+Right)",
      "action": { "keypress": "#^{Right}" }
    },
    {
      "title": "Close Desktop\n(Win+Ctrl+F4)",
      "action": { "keypress": "#^{F4}" }
    },
    {
      "title": "Magnifier\n(Win++)",
      "action": { "keypress": "#{NumpadPlus}" }
    },
    {
      "title": "Voice Typing\n(Win+H)",
      "action": { "keypress": "#h" }
    },
    {
      "title": "Device Manager",
      "action": { "exe": "devmgmt.msc" },
      "theme": "utility"
    },
    {
      "title": "Control Panel",
      "action": { "exe": "control.exe" },
      "theme": "utility"
    },
    {
      "title": "Calculator",
      "action": { "exe": "calc.exe" },
      "theme": "utility"
    }
  ]
}
